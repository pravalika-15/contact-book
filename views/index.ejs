<body>
    <div class="container px-5 pb-2 pt-5">
        <a type="button" class="btn" href="/addcontact">Add contact</a>
    </div>
    <div class="container px-5 py-2">
        <a type="button" class="btn btn-outline-dark" href="/allcontacts">All contacts</a>
    </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <script>
        $("#update_contact").submit(function(event){
            event.preventDefault()
            var get_array = $(this).serializeArray();
            var data = {}

            $.map(get_array,function(n,i){
                data[n['name']] = n['value']
            })

            console.log(data); 
            var request = {
                "url": `http://localhost:3000/api/contacts/${data.id}`,
                "method":"PUT",
                "data":data
            }

            $.ajax(request).done(function(response){
                alert("updated successfully!!")
            })
        })
    </script>
</body>
